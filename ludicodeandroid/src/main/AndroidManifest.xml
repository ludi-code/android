<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.dashingames.ludicode_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.dashingames.ludicode_android.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.ChatActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.LevelChooserActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.GameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.FBActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.InstructionsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.SuiviActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>